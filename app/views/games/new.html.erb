
<div class="game-container">
  <h1>New Game</h1>
  <ul class="letters">
    <% @letters.each do |letter| %>
      <li><%= letter.capitalize %></li>
    <% end %>
  </ul>
  <form class="search-form" action="score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="ask" placeholder="what's the longest word you can find ? ">
    <input type="submit" value="Ask!">
  </form>
</div>
